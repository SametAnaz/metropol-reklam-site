rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Geçici basit kurallar - test için
    match /users/{userId} {
      // Authenticated kullanıcılar kendi dokümanlarını oluşturabiliyor
      allow read, write: if request.auth != null;
    }
    
    // Diğer tüm koleksiyonlar
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}